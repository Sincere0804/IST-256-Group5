@model List<Category>

@for (int i = 0; i < 3; i++)
{
	var item = Model[i];
	<div class="card">
		<img src="@ViewBag.images[i]" class="card-img-top" alt="...">
		<div class="card-body">
			<h5 class="card-title">@item.CategoryName</h5>
			<p class="product-price">$150</p>
			<p class="product-text">@item.Description</p>
			<button class="order-button" onclick="orderNow('Nike Air Force 1', 150)">Order Now</button>
		</div>
	</div>


}

